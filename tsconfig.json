{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": false,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "typeRoots": ["src/@types", "node_modules/@types"],
    "forceConsistentCasingInFileNames": true
  }
}
